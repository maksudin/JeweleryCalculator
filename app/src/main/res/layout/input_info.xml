<?xml version="1.0" encoding="utf-8"?>


<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text_ava_metal_title"
            android:layout_width="211dp"
            android:layout_height="39dp"
            android:text="@string/title_ava_info"
            android:textSize="20sp"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"
            app:layout_constraintHorizontal_bias="0.508"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" />

        <TextView
            android:id="@+id/text_ava_weight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="6 г"
            android:layout_marginTop="22dp"
            app:layout_constraintTop_toBottomOf="@+id/text_ava_metal_title"
            android:layout_marginLeft="44dp"
            app:layout_constraintLeft_toLeftOf="parent" />

        <TextView
            android:id="@+id/text_ava_proba"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="585"
            app:layout_constraintRight_toLeftOf="@+id/text_ava_color"
            android:layout_marginRight="8dp"
            app:layout_constraintTop_toTopOf="@+id/text_ava_weight"
            android:layout_marginTop="0dp"
            app:layout_constraintLeft_toRightOf="@+id/text_ava_weight"
            android:layout_marginLeft="8dp" />

        <TextView
            android:id="@+id/text_ava_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Жёлтый"
            android:layout_marginRight="30dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/text_ava_proba"
            android:layout_marginTop="0dp" />

        <TextView
            android:id="@+id/text_add_weight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="5 г"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/text_ava_weight"
            android:layout_marginLeft="0dp"
            app:layout_constraintLeft_toLeftOf="@+id/text_ava_weight" />

        <TextView
            android:id="@+id/text_add_proba"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="999.9"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="@+id/text_ava_proba"
            android:layout_marginRight="0dp"
            app:layout_constraintRight_toRightOf="@+id/text_ava_proba"
            app:layout_constraintTop_toTopOf="@+id/text_add_weight"
            android:layout_marginTop="0dp"
            app:layout_constraintHorizontal_bias="0.65" />

        <TextView
            android:id="@+id/text_desired_results_title"
            android:layout_width="211dp"
            android:layout_height="39dp"
            android:text="@string/title_desired_result"
            android:textSize="20sp"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintHorizontal_bias="0.503"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/text_add_weight" />

        <TextView
            android:id="@+id/text_desired_proba"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="585"
            android:layout_marginLeft="87dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="@+id/text_desired_results_title"
            app:layout_constraintHorizontal_bias="0.167"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/text_desired_results_title" />

        <TextView
            android:id="@+id/text_desired_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Красный"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="@+id/text_desired_results_title"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/text_desired_proba"
            android:layout_marginTop="0dp"
            app:layout_constraintHorizontal_bias="0.518"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp" />


</android.support.constraint.ConstraintLayout>


