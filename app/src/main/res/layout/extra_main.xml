<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/desiredResultTitle"
        android:layout_width="204dp"
        android:layout_height="31dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="266dp"
        android:text="Желаемый результат"
        android:textSize="20dp"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/desiredProbaLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Проба"
        android:layout_marginTop="33dp"
        app:layout_constraintTop_toBottomOf="@+id/desiredResultTitle"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/addProbaLabel" />

    <AutoCompleteTextView
        android:id="@+id/desiredProba"
        android:layout_width="64dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="850"
        app:layout_constraintTop_toTopOf="@+id/desiredProbaLabel"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/desiredProbaLabel"
        app:layout_constraintLeft_toRightOf="@+id/desiredProbaLabel"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.64" />

    <TextView
        android:id="@+id/addMetalTitle"
        android:layout_width="247dp"
        android:layout_height="35dp"
        android:text="Дополнительный металл"
        android:textSize="20dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintHorizontal_bias="0.51"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <TextView
        android:id="@+id/addProbaLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Проба"
        app:layout_constraintLeft_toLeftOf="@+id/addWeightLabel"
        android:layout_marginTop="65dp"
        app:layout_constraintTop_toBottomOf="@+id/addWeightLabel" />

    <TextView
        android:id="@+id/addWeightLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Вес"
        app:layout_constraintRight_toLeftOf="@+id/addMetalTitle"
        android:layout_marginTop="37dp"
        app:layout_constraintTop_toBottomOf="@+id/addMetalTitle" />

    <AutoCompleteTextView
        android:id="@+id/addProba"
        android:layout_width="64dp"
        android:layout_height="wrap_content"
        android:text="750"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/addProbaLabel"
        android:layout_marginLeft="8dp"
        app:layout_constraintHorizontal_bias="0.627"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toTopOf="@+id/addProbaLabel"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/addProbaLabel"
        app:layout_constraintVertical_bias="0.588" />

    <AutoCompleteTextView
        android:id="@+id/addWeight"
        android:layout_width="64dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:text="6 "
        app:layout_constraintHorizontal_bias="0.663"
        app:layout_constraintLeft_toRightOf="@+id/addWeightLabel"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toTopOf="@+id/addWeightLabel"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/addWeightLabel" />

    <ImageView
        android:id="@+id/horizontalDivider"
        android:layout_width="344dp"
        android:layout_height="1dp"
        android:background="@color/colorBlack"
        app:srcCompat="?attr/dividerHorizontal"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="56dp"
        app:layout_constraintTop_toBottomOf="@+id/addProbaLabel"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <TextView
        android:id="@+id/desiredColorLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Цвет"
        app:layout_constraintLeft_toLeftOf="@+id/desiredProbaLabel"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="46dp"
        app:layout_constraintTop_toBottomOf="@+id/desiredProbaLabel" />

    <Button
        android:id="@+id/button2"
        android:layout_width="232dp"
        android:layout_height="60dp"
        android:text="Посчитать"
        android:onClick="testResultsLayoutShowing"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <Spinner
        android:id="@+id/desiredColorSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/desiredProba"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/desiredProba"
        app:layout_constraintTop_toTopOf="@+id/desiredColorLabel"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/desiredColorLabel"
        android:layout_marginBottom="0dp" />


</android.support.constraint.ConstraintLayout>