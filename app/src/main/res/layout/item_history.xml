<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical"
    android:padding="16dp">


    <TextView
        android:id="@+id/text_ava_color"
        style="@style/ListItemText"
        tools:text="Красный"
        android:textAppearance="@style/ListItemTextColorValue"
        android:layout_marginTop="@dimen/text_list_item_margin_top"
        app:layout_constraintTop_toBottomOf="@+id/text_ava_proba"
        app:layout_constraintRight_toRightOf="@+id/text_ava_proba"
        app:layout_constraintLeft_toLeftOf="@+id/text_ava_proba"/>

    <TextView
        android:id="@+id/text_ava_proba"
        style="@style/ListItemText"
        android:textAppearance="@style/MainText"
        tools:text="585"
        android:layout_marginLeft="@dimen/text_list_item_margin_left"
        android:layout_marginTop="@dimen/text_list_item_margin_top"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/text_results_proba"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        tools:text="585"
        android:textAppearance="@style/MainText"
        app:layout_constraintTop_toTopOf="@+id/text_ava_proba"
        android:layout_marginRight="@dimen/text_list_item_margin_left"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/text_results_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Красный"
        android:textAppearance="@style/ListItemTextColorValue"
        app:layout_constraintRight_toRightOf="@+id/text_results_proba"
        app:layout_constraintTop_toTopOf="@+id/text_ava_color"
        app:layout_constraintLeft_toLeftOf="@+id/text_results_proba" />

    <ImageView
        android:id="@+id/image_arrow_forward"
        android:layout_width="45dp"
        android:layout_height="45dp"
        app:srcCompat="@drawable/ic_arrow_forward_black_48dp"
        android:tint="@color/secondary_text"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintHorizontal_bias="0.501" />

    <TextView
        android:id="@+id/text_add_proba"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="999.9"
        android:textAppearance="@style/ListItemTextColorValue"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/image_arrow_forward"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/image_arrow_forward"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/image_arrow_forward" />


</android.support.constraint.ConstraintLayout>