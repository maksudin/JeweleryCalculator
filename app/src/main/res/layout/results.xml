<?xml version="1.0" encoding="utf-8"?>

<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto">


        <TextView
            android:id="@+id/resultsSilver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:text="0,64 г"
            app:layout_constraintLeft_toRightOf="@+id/avaMetalTitle"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.512"
            app:layout_constraintTop_toTopOf="@+id/resultsSilverLabel"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/resultsSilverLabel"
            android:layout_marginBottom="0dp" />

        <TextView
            android:id="@+id/resultsSilverLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:text="Добавить серебра"
            app:layout_constraintLeft_toLeftOf="@+id/resultsWeightLabel"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/resultsCopperLabel" />

        <TextView
            android:id="@+id/resultsCopper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="0,64 г"
            app:layout_constraintLeft_toRightOf="@+id/avaMetalTitle"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/resultsCopperLabel"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/resultsCopperLabel"
            android:layout_marginBottom="0dp" />

        <TextView
            android:id="@+id/resultsCopperLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:text="Убрать меди"
            app:layout_constraintLeft_toLeftOf="@+id/resultsWeightLabel"
            android:layout_marginTop="33dp"
            app:layout_constraintTop_toBottomOf="@+id/resultsAvaWeightMetalLabel" />

        <TextView
            android:id="@+id/avaMetalTitle"
            android:layout_width="119dp"
            android:layout_height="34dp"
            android:text="Результаты"
            android:textSize="20dp"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"
            app:layout_constraintHorizontal_bias="0.506"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/horizontalDivider" />


        <ImageView
            android:id="@+id/horizontalDivider"
            android:layout_width="385dp"
            android:layout_height="3dp"
            android:background="@color/colorBlack"
            app:srcCompat="?attr/dividerHorizontal"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.47"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="79dp" />


        <Button
            android:id="@+id/resultsButton"
            android:layout_width="232dp"
            android:layout_height="60dp"
            android:text="Далее"
            android:onClick="testMainLayout"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent" />

        <TextView
            android:id="@+id/resultsWeight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15,6 г"
            app:layout_constraintLeft_toRightOf="@+id/avaMetalTitle"
            android:layout_marginLeft="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/resultsWeightLabel"
            android:layout_marginBottom="0dp"
            app:layout_constraintTop_toTopOf="@+id/resultsWeightLabel"
            android:layout_marginTop="8dp"
            app:layout_constraintVertical_bias="1.0"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent" />

        <TextView
            android:id="@+id/resultsAvaWeightMetal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:text="6 г"
            app:layout_constraintHorizontal_bias="0.512"
            app:layout_constraintLeft_toRightOf="@+id/avaMetalTitle"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/resultsAvaWeightMetalLabel"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/resultsAvaWeightMetalLabel"
            android:layout_marginBottom="0dp" />

        <TextView
            android:id="@+id/resultsWeightLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Итоговый вес"
            app:layout_constraintRight_toLeftOf="@+id/avaMetalTitle"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="37dp"
            app:layout_constraintTop_toBottomOf="@+id/horizontalDivider"
            app:layout_constraintHorizontal_bias="0.307" />

        <TextView
            android:id="@+id/resultsAvaWeightMetalLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:text="Вес имеющегося металла"
            app:layout_constraintLeft_toLeftOf="@+id/resultsWeightLabel"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/resultsWeightLabel" />

    </android.support.constraint.ConstraintLayout>

</layout>
